{
    "version": "0.1.0",
    "command": "bash",
    "isShellCommand": true,
    "args": ["-c"],
    "tasks": [
        {
            "suppressTaskName": true,
            "taskName": "restore",
            "args": ["dotnet restore"],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "suppressTaskName": true,
            "taskName": "build",
            "args": ["dotnet build */*"],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "suppressTaskName": true,
            "taskName": "test",
            "args": ["dotnet test test/*"],
            "isBuildCommand": false,
            "problemMatcher": "$msCompile"
        },
        {
            "suppressTaskName": true,
            "taskName": "package",
            "args": ["dotnet pack -c Release src/*/project.json"],
            "isBuildCommand": false,
            "isTestCommand": false,
            "problemMatcher": "$msCompile"
        }
    ]
}